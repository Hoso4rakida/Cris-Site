modules = ["nodejs-20", "java-17"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jdk17", "maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

# --- TAREFA 1: BACKEND (SPRING BOOT) ---
[[workflows.workflow.tasks]]
name = "Backend (Java)"
task = "shell.exec"
args = "mvn spring-boot:run"

# --- TAREFA 2: FRONTEND (REACT) ---
[[workflows.workflow.tasks]]
name = "Frontend (React)"
task = "shell.exec"
args = "cd frontend/AnaSite && npm install && npm run dev"
waitForPort = 5173

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[deployment]
deploymentTarget = "dynamic"
publicDir = "."